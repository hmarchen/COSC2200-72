<Window x:Class="DurakWPF_Game.GameInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DurakWPF_Game"
        mc:Ignorable="d"
        Title="GameInfo" Height="250" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Image Stretch="Fill" Opacity="0.5" Source="/Assets/Card Asset/Backgrounds/background_2.png"/>

        <Label FontFamily="Arial" FontSize="14" Content="Durak Game Information" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" />
        <TextBlock FontFamily="Arial" FontSize="14" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="111" Width="524">
            <Run Text="Durak is a traditional Russian card game that is popular in many post-Soviet states. It is Russia's most popular card game, having displaced Preferans. It has since become known in other parts of the world."/><LineBreak/>
            <Run Text="The objective of the game is to shed all one's cards when there are no more cards left in the deck. At the end of the game, the last player with cards in their hand is the durak or 'fool'."/>
        </TextBlock>
    </Grid>
</Window>
